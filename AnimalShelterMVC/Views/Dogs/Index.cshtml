@{
  Layout = "_Layout";
}

@using AnimalShelterMVC.Models;
@model List<AnimalShelterMVC.Models.Dog>;

<h1>Dogs</h1>

@if (@Model.Count == 0)
{
  <h3>No dogs have been added yet!</h3>
} 

@foreach (Dog dog in Model)
{
  <li>@Html.ActionLink($"{dog.Name}", "Name", new { id = dog.DogId })</li>
}

<p>@Html.ActionLink("Add new dog", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>